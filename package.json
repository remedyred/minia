{
	"name": "@snickbit/minia",
	"description": "Teeny tiny composition stores",
	"version": "0.0.6",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist",
		"test": "jest",
		"build": "tsup",
		"build:meta": "yarn build --metafile",
		"prod": "yarn build --minify",
		"watch": "yarn build --watch",
		"docs": "typedoc",
		"depcheck": "depcheck",
		"release": "release-it --ci"
	},
	"dependencies": {
		"@snickbit/out": "^2.0.11",
		"@snickbit/utilities": "3.0.7",
		"localforage": "^1.10.0",
		"mitt": "^3.0.0",
		"vue-demi": "^0.12.5"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typedoc-plugin-no-inherit": "^1.3.1",
		"typescript": "^4.6.3",
		"vue": "^3.2.33"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release v${version}"
		},
		"npm": {
			"skipChecks": true
		}
	},
	"typedoc": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"githubPages": false,
		"hideBreadcrumbs": true,
		"hideGenerator": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"excludePrivate": true,
		"disableSources": true,
		"defaultCategory": "Modules",
		"readme": "none"
	}
}
