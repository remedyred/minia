{
	"name": "@snickbit/minia",
	"description": "Teeny tiny Vue.js composition stores",
	"version": "0.0.15",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist",
		"test": "jest",
		"build": "tsup",
		"meta": "npm run prod -- --metafile",
		"prod": "npm run build -- --minify",
		"watch": "npm run build -- --watch",
		"depcheck": "depcheck",
		"docs": "typedoc"
	},
	"dependencies": {
		"@snickbit/utilities": "3.0.16",
		"localforage": "^1.10.0",
		"mitt": "^3.0.0",
		"vue-demi": "^0.12.5"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typescript": "^4.6.3",
		"vue": "^3.2.33"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
